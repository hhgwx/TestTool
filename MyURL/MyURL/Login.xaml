<Window x:Class="MyURL.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyURL"
        mc:Ignorable="d"
        Title="密码" Height="141" Width="300">
    <Grid>
        <Grid>
            <Label x:Name="label1" Content="初次请设置密码(编辑书签时用)" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <Label x:Name="label2" Content="请输入密码" HorizontalAlignment="Left" Margin="48,31,0,0" VerticalAlignment="Top" FontSize="12"/>
            <Label x:Name="label3" Content="请再次输入密码" HorizontalAlignment="Left" Margin="24,58,0,0" VerticalAlignment="Top" FontSize="12"/>


            <PasswordBox  x:Name="passwordBox1" HorizontalAlignment="Left" Height="23" Margin="123,30,0,0" VerticalAlignment="Top" Width="100" KeyDown="passwordBox1_KeyDown"/>
            <PasswordBox  x:Name="passwordBox2" HorizontalAlignment="Left" Height="23" Margin="123,58,0,0" VerticalAlignment="Top" Width="100" KeyDown="passwordBox2_KeyDown"/>
            <Button x:Name="button" Content="设置" HorizontalAlignment="Left" Margin="123,86,0,0" VerticalAlignment="Top" Width="100" Click="button_Click"/>

        </Grid>
    </Grid>
</Window>
