<Window x:Class="MyURL.safetyPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyURL"
        mc:Ignorable="d"
        Title="safetyPassword" Height="149.198" Width="300">
    <Grid>
        <Grid Margin="0,0,0,0">
            <Label x:Name="label1" Content="编辑书签需要输入密码" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <Label x:Name="label2" Content="请输入密码" HorizontalAlignment="Left" Margin="48,31,0,0" VerticalAlignment="Top" FontSize="12" />

            <PasswordBox  x:Name="passwordBox1" HorizontalAlignment="Left" Height="23" Margin="123,30,0,0" VerticalAlignment="Top" Width="100" KeyDown="passwordBox1_KeyDown"/>
            <Button x:Name="button" Content="确认" HorizontalAlignment="Left" Margin="123,68,0,0" VerticalAlignment="Top" Width="100" Click="button_Click"/>

        </Grid>
    </Grid>
</Window>
