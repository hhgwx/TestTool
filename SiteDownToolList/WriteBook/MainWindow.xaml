<Window x:Class="WriteBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WriteBook"
        mc:Ignorable="d"
        Title="MainWindow" Height="18" Width="150" Visibility="Visible" Background="Transparent" KeyDown="Window_KeyDown_1" WindowStyle="None" AllowsTransparency="True" Activated="Window_Activated" MouseMove="Window_MouseMove">
    <Grid>
        <TextBox Name="text_edit" Foreground="Gray" Background="Transparent" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150" Height="18" AcceptsReturn="True" VerticalScrollBarVisibility="Hidden" Text="{Binding TextEdit}" MouseEnter="text_edit_MouseEnter" MouseLeave="text_edit_MouseLeave" BorderThickness="0" BorderBrush="{x:Null}"></TextBox>
    </Grid>
</Window>
